@model IEnumerable<projetoJobs.Models.Vaga>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Vagas Disponíveis</h2>
        <a href="/Vaga/Create" class="btn btn-primary">+ Nova Vaga</a>
    </div>

    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>Vaga</th>
                <th>Cidade</th>
                <th>Salário</th>
                <th>Contrato</th>
                <th>Nível</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var vaga in Model)
            {
                <tr>
                    <td>@vaga.NomeVaga</td>
                    <td>@vaga.Cidade - @vaga.Estado</td>
                    <td>R$ @vaga.Salario</td>
                    <td>@vaga.TipoContrato</td>
                    <td>@vaga.NivelExperiencia</td>
                </tr>
            }
        </tbody>
    </table>
</div>
