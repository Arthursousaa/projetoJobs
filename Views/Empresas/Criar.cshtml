@model projetoJobs.Models.Vaga

@{
    ViewData["Title"] = "Criar Vaga";
}

<h2>Criar Vaga</h2>

<form asp-action="Criar" asp-controller="Empresas" method="post" class="card p-3" >
    <div class="mb-3">
        <label asp-for="NomeVaga" class="form-label">Nome da Vaga</label>
        <input asp-for="NomeVaga" class="form-control" />
        <span asp-validation-for="NomeVaga" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DescricaoVaga" class="form-label">Descrição</label>
        <textarea asp-for="DescricaoVaga" class="form-control"></textarea>
        <span asp-validation-for="DescricaoVaga" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-4 mb-3">
            <label asp-for="Salario" class="form-label">Salário</label>
            <input asp-for="Salario" class="form-control" />
            <span asp-validation-for="Salario" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="TipoContrato" class="form-label">Tipo de Contrato</label>
            <input asp-for="TipoContrato" class="form-control" />
            <span asp-validation-for="TipoContrato" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3">
            <label asp-for="NivelExperiencia" class="form-label">Nível de Experiência</label>
            <input asp-for="NivelExperiencia" class="form-control" />
            <span asp-validation-for="NivelExperiencia" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="Cidade" class="form-label">Cidade</label>
            <input asp-for="Cidade" class="form-control" />
            <span asp-validation-for="Cidade" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-3">
            <label asp-for="Estado" class="form-label">Estado</label>
            <input asp-for="Estado" class="form-control" />
            <span asp-validation-for="Estado" class="text-danger"></span>
        </div>
    </div>

    <!-- Se a sua ação Criar do controller Empresa necessita do Id da empresa, envie-o aqui.
         Caso a empresa já esteja autenticada e você pegue o id pela sessão, pode remover este campo. -->
    <input type="hidden" asp-for="EmpresasId" />

    <button type="submit" class="btn btn-success">Criar Vaga</button>
    <a asp-action="Index" asp-controller="Empresas" class="btn btn-secondary ms-2">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
