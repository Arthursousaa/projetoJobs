@model projetoJobs.Models.Empresa

<h2>Detalhes da Empresa</h2>

<p><strong>Nome:</strong> @Model.Nome</p>
<p><strong>Cidade:</strong> @Model.Cidade</p>
<p><strong>Estado:</strong> @Model.Estado</p>

<h3>Vagas da Empresa</h3>

<table class="table">
    <thead>
        <tr>
            <th>Vaga</th>
            <th>Descrição</th>
            <th>Salário</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var vaga in Model.Vagas)
        {
            <tr>
                <td>@vaga.NomeVaga</td>
                <td>@vaga.DescricaoVaga</td>
                <td>@vaga.Salario?.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
